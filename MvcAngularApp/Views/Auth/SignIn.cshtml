@model BLL.Models.SignInModel
@{
    ViewData["Title"] = "SignIn";
}

<h1>SignIn</h1>

<form asp-action="SignIn" asp-controller="Auth">
    <div class="col-6">
        <div class="form-group">
            <label asp-for="Username">Username</label>
            <input asp-for="Username" type="text" class="form-control" id="exampleInputEmail1" placeholder="Username">
            <span asp-validation-for="Username"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group form-check">
        </div>
        <button type="submit" class="btn btn-primary">Sign In</button>
        <a asp-action="SignUp" asp-controller="Auth">Sign Up</a>
    </div>
</form>